<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.LiveWallpaperIt" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="actionModeStyle">@style/ActionModeStyle</item>
    </style>

    <style name="Theme.LiveWallpaperIt" parent="Base.Theme.LiveWallpaperIt">
        <!--        <item name="actionBarPopupTheme">@style/Theme.PopupOverlay</item>-->
        <!--        <item name="actionBarTheme">@style/Theme.PopupOverlay</item>-->
    </style>

    <style name="Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="iconTint">?attr/colorButtonNormal</item>
        <!-- toolbar back arrow and 3dot color -->
        <item name="android:textColorSecondary">?attr/colorButtonNormal</item>
        <!-- toolbar title color -->
        <item name="android:textColorPrimary">?attr/colorButtonNormal</item>
        <!-- options menu -->
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.DayNight</item>
    </style>

    <style name="TitleDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowNoTitle">false</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
<!--        <item name="android:windowTitleStyle">@style/GradientWindowTitle</item>-->
<!--        <item name="android:windowBackground">@drawable/dialog_background</item>-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="NoTitleDialogTheme" parent="TitleDialogTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--
        Settings
    -->
    <style name="SettingsTheme" parent="Base.Theme.LiveWallpaperIt">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:background">@null</item>
        <item name="background">@null</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <item name="android:listPreferredItemHeight">64dp</item>
        <item name="android:listPreferredItemHeightSmall">48dp</item>
        <item name="android:listPreferredItemHeightLarge">80dp</item>
    </style>
</resources>
